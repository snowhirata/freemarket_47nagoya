.signin
  = link_to image_tag("logo.svg",size: "200x100"),root_path
  .signin__panel
    .signin__panel__top
      %h1 新規会員登録
    .signin__panel__body
      = link_to new_user_registration_path,class: "m-login" do
        %i.fa.fa-envelope
        メールアドレスで登録
      = link_to "#",class: "f-login" do
        %i.fa.fa-facebook
        Facebookで登録
      = link_to "#",class: "g-login" do
        %i.fa.fa-google
        Googleで登録
  .login-footer
    %ul.login-footer__list
      %li= link_to "プライバシーポリシー","#"
      %li= link_to "メルカリ利用規約","#"
      %li= link_to "特定商取引に関する表記","#"
    = image_tag "logo-gray.svg",size: "80x65"
    %i.login-footer__copyright @2019Mercari
