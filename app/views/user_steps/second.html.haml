.single-container
  %header.single-header
    %h1
      =link_to image_tag('logo.svg'),root_path
    %nav.progress-bar.signup-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status.active#step1
        %li
          電話番号認証
          .progress-status#step2
        %li
          お届け先住所入力
          .progress-status#step3
        %li
          支払い方法
          .progress-status#step4
        %li
          完了
          .progress-status#step5
  %main
    %section
      %h2 会員情報登録
      =form_with(model: @user, url: wizard_path, html: {class: 'l-single-inner'}) do |f|
        = render "devise/shared/error_messages", resource: @user
        .l-single-content#second-form
          .form-group
            = f.label :郵便番号
            %span.form-require
              必須
            = f.text_field :postal_code, placeholder:'例)123-4567'
          .form-group
            =f.label :都道府県
            %span.form-arbitrary
              任意
            .select-wrap
              =f.collection_select :prefecture_id, Prefecture.all, :id, :name, {},class: 'select-default'
              =fa_icon "chevron-down"
          .form-group
            = f.label :市区町村
            %span.form-require
              必須
            = f.text_field :city, placeholder:'例)横浜市緑区'
          .form-group
            = f.label :番地
            %span.form-require
              必須
            = f.text_field :block, placeholder: '例)青山1-1-1'
          .form-group
            = f.label :建物名
            %span.form-require
              必須
            = f.text_field :building, placeholder: '例)柳ビル103'
          .form-group
            = f.label :電話番号
            %span.form-require
              必須
            = f.text_field :phone_number, placeholder: '例)09012345678'
          .form-group
            = f.submit "次へ進む",class: 'btn-red',id: 'ivent-button2'
            = link_to 'Skip', next_wizard_path
