- breadcrumb :mypage

= render 'items/header'

.container
  .mypage
    .mypage__user-icon
      =link_to "#" do
        %figure
          =image_tag('member_photo_noimage_thumb.png',width:60,height:60)
        %h2.bold 
          =@user.nickname
        .mypage-number
          .mypage-number__rate
            評価
            0
          .mypage-number__listings
            出品数
            =current_user.items.length
    .mypage__tab-container-notification-todo
      %ul.mypage-tabs
        %li.active お知らせ
        %li やることリスト
      .tab-content
        %ul#mypage-tab-notification.active
          %li
          %li
          %li
          %li.mypage-go-list
            =link_to "一覧を見る","#"
        %ul#mypage-tab-todo
          %li
          %li
          %li
          %li.mypage-go-list
            =link_to "一覧を見る","#"
    .mypage__tab-container
      %h2.mypage-tab-head 購入した商品
      %ul.transaction-mypage-tabs
        %li.active 取引中
        %li 過去の取引
      .transaction-tab-content
        %ul#mypage-tab-transaction-now.active
          %li
          %li
          %li
          %li.mypage-go-list
            =link_to "一覧を見る","#"
        %ul#mypage-tab-transaction-old
          / -@buyitems.each do |item|
          /   =link_to item_messages_path(item) do
          /     %li
          /       =image_tag item.pictures.first.image.url
          /       %p
          /         =item.name
          /         を購入しました。取引が完了しました。
          %li
          %li
          %li
          %li.mypage-go-list
            =link_to "一覧を見る","#"
  = render partial:'sidebar'
=javascript_include_tag 'users_show.js'
