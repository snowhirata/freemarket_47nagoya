var category = `<%= j(@main_category_num) %>`
if (category >= 1) {
  var html = `<%= j(select :item, :child_category_id, options_from_collection_for_select(@child_category, :id, :name),{prompt:'---'}, {data: {remote: true, url: url_for(action: :child_category_select)}})%>
              <%= fa_icon 'chevron-down' %>`
  $('#category-select').html(html);
  $('#child-category-select').html('');
}
else if (category == '') {
  $('#category-select').html('');
  $('#child-category-select').html('');
}
